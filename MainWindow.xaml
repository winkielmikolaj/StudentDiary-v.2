<Window x:Class="StudentDiary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentDiary"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Student Diary" Height="450" Width="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Content="Add" Height="25" Width="100" Margin="5"/>
            <Button Content="Edit" Height="25" Width="100" Margin="5"/>
            <Button Content="Delete" Height="25" Width="100" Margin="5"/>
            <ComboBox Height="26" Width="150" Margin="5"/>
            <Button Content="Refresh" Height="25" Width="100" Margin="5"/>
        </StackPanel>
        <DataGrid Grid.Row="1" Margin="5"/>
    </Grid>
</Window>
